pages = {3128–3138},
numpages = {11},
keywords = {encoder-decoder, transfer learning, sequence to sequence, deep learning, IoT sensors, sustainability, energy, wavelet transform, agriculture, time series, micro-climate prediction, attention mechanism},
location = {Virtual Event, Singapore},
series = {KDD '21}
}

