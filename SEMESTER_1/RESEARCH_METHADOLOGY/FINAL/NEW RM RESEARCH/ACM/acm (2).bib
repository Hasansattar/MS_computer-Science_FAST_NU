@article{10.1145/3528223.3530146,
author = {Pa\l{}ubicki, Wojtek and Makowski, Mi\l{}osz and Gajda, Weronika and H\"{a}drich, Torsten and Michels, Dominik L. and Pirk, S\"{o}ren},
title = {Ecoclimates: Climate-Response Modeling of Vegetation},
year = {2022},
