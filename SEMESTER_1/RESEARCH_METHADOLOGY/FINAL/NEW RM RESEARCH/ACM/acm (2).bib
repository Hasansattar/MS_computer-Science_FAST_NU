@inproceedings{10.1145/3410404.3414256,
author = {Troiano, Giovanni Maria and Schouten, Dylan and Cassidy, Michael and Tucker-Raymond, Eli and Puttick, Gillian and Harteveld, Casper},
title = {Ice Paddles, CO2 Invaders, and Exploding Planets: How Young Students Transform Climate Science Into Serious Games},
year = {2020},
